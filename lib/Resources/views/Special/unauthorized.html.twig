{% extends ["::page.html.twig", "AppBundle:Include:page.html.twig", "AgitUiBundle:Include:page.html.twig"] %}

{% agit.capability "" %}
{% agit.status "401" %}
{% set noindex = 1 %}
{% block title %}{{ t("Login required") }}{% endblock %}

{% block config_js %}
    <script type="text/javascript">/* <![CDATA[ */
        window.ag = window.ag || {};
        ag.cfg = ag.cfg || {};
        ag.cfg.locale = "{{ locale }}";
        ag.cfg.apiBaseUrl = "{{ getApiUrlBase() }}";
        ag.cfg.csrfToken = "{{ getCsrfToken() }}";
    /* ]]> */</script>
{% endblock %}

{% block js %}
        {% javascripts
            "@AgitProfileBundle/Resources/public/js/var/translations.js"
            "@AgitUiBundle/Resources/public/js/lib/elem/ApiForm.js"
            "@AgitUiBundle/Resources/public/js/lib/elem/FormRow.js"
            "@AgitUiBundle/Resources/public/js/lib/elem/FormFooter.js"
            "@AgitProfileBundle/Resources/public/js/var/api.js"
            "@AgitProfileBundle/Resources/public/js/ctl/init.js"
            "@AgitProfileBundle/Resources/public/js/ctl/page.unauthorized.js"
            filter="?uglifyjs2"
        %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
{% endblock %}
